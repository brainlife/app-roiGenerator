#!/bin/bash
#PBS -l nodes=1:ppn=4,vmem=30gb 
#PBS -l walltime=1:00:00
#PBS -N eccentricity-parcellation-generator
#PBS -V

set -ex

# create niftis of eccentricity parcellations before final merge
echo $FREESURFER_LICENSE > license.txt
time singularity exec -e -B `pwd`/license.txt:/usr/local/freesurfer/license.txt docker://brainlife/connectome_workbench:1.4.2-freesurfer-update ./polarAngle-nifti-generator.sh

# create final parcellation
if [ ! -f parc/parc.nii.gz ]; then
    time singularity exec -e docker://brainlife/fsl:5.0.11 ./combine-parcellation.sh
fi
